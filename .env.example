# Trade.io Environment Variables
# Copy this file to .env.local and fill in your values
# NEVER commit .env or .env.local files

# ============================================
# Database
# ============================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tradeio_dev"
DATABASE_POOL_SIZE=10

# ============================================
# Authentication & Security
# ============================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-min-32-characters-long"

# Auth provider: supabase | clerk | custom
AUTH_PROVIDER="supabase"

# If using Supabase
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_KEY="your-service-key"

# If using Clerk
# CLERK_SECRET_KEY="sk_test_..."
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."

# ============================================
# Market Data Provider
# ============================================
# Get free API key from:
# - Polygon.io: https://polygon.io/
# - Alpha Vantage: https://www.alphavantage.co/

MARKET_DATA_PROVIDER="polygon"  # polygon | alphavantage
MARKET_DATA_API_KEY="your-api-key-here"
MARKET_DATA_BASE_URL="https://api.polygon.io"

# ============================================
# Application
# ============================================
NODE_ENV="development"  # development | staging | production
PORT=3000
LOG_LEVEL="debug"  # trace | debug | info | warn | error | fatal

# Public URL (for generating links, webhooks, etc.)
PUBLIC_URL="http://localhost:3000"

# ============================================
# Redis (Caching & Sessions)
# ============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""  # Leave empty for local dev

